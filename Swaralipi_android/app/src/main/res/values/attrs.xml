<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Shared attributes-->
    <attr name="corner_radius" format="dimension" />
    <attr name="corner_radius_percent" format="float" />
    <attr name="stroke_width" format="dimension" />
    <attr name="stroke_color" format="color|reference" />
    <attr name="stroke_color_pressed" format="color|reference" />

    <declare-styleable name="GradientView">
        <attr name="corner_radius" />
        <attr name="stroke_width"/>
        <attr name="stroke_color"/>

        <attr name="start_color" format="color|reference" />
        <attr name="end_color" format="color|reference" />
        <attr name="gradient_angle" format="enum">
            <enum name="top_bottom" value="0" />
            <enum name="top_right_bottom_left" value="1" />
            <enum name="right_left" value="2" />
            <enum name="bottom_right_top_left" value="3" />
            <enum name="bottom_top" value="4" />
            <enum name="bottom_left_top_right" value="5" />
            <enum name="left_right" value="6" />
            <enum name="top_left_bottom_right" value="7" />
        </attr>
        <attr name="flat_corner" format="enum">
            <enum name="top" value="0" />
            <enum name="top_left" value="1" />
            <enum name="top_right" value="2" />
            <enum name="bottom" value="3" />
            <enum name="bottom_left" value="4" />
            <enum name="bottom_right" value="5" />
            <enum name="left" value="6" />
            <enum name="right" value="7" />
        </attr>

    </declare-styleable>


</resources>